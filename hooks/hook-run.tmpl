#!/bin/bash
###############################################################################
# This hook is the command that is executed every run.
# Check the examples in examples/
#
# PARAMETERS:
# $1 is the candidate number
# $2 is the instance name
# The rest ($* after `shift 2') are parameters to the run
#
# RETURN VALUE:
# This script should print nothing.
# Exit with 0 if no error, with 1 in case of error
###############################################################################

EXE=~/bin/program
FIXED_PARAMS=""
CANDIDATE=$1
INSTANCE=$2
shift 2
CAND_PARAMS=$*

exec $EXE ${FIXED_PARAMS} -i $INSTANCE ${CAND_PARAMS} 1> ${CANDIDATE}.run.output 2> ${CANDIDATE}.run.stderr
